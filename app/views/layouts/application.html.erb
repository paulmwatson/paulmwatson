<!DOCTYPE html>
<!-- <%= t('source_code_welcome')%> -->
<html lang="<%= I18n.locale %>" class="has-main-background">

<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">

  <title><%= t('site.title') %></title>
  <meta name="description" content="<%= t('site.description') %>">

  <%= stylesheet_link_tag 'application', media: 'all' %>
</head>

<body>
  <%= yield %>
  <section class="section">
    <nav class="is-flex is-horizontal-center">
      <%= link_to :root do %>
      <figure class="image is-64x64 is-border-lighter-2px is-border-radius-100percent has-background-transparent">
        <img class="is-rounded" src="<%= image_path 'photo-of-paulmwatson.jpg' %>" alt="<%= t('alts.photo_of_paulmwatson') %>">
        <div class="is-shadow-inset is-border-radius-100percent " aria-hidden="true"></div>
      </figure>
      <%- end -%>
    </nav>
  </section>
</body>

</html>